.alert.alert-danger(role='alert', ng-show='error')
  | {{error}}

form(ng-submit='handleRegBtnClick()', role='form', ng-init='registrationForm = {}')
  .form-group
    label(for='email') Email
    input#email.form-control(type='email', name='email', ng-model='registrationForm.email', required='required')
  .form-group
    label(for='password') Password
    input#password.form-control(type='password', name='password', ng-model='registrationForm.password', required='required')
  .form-group
    label(for='password_confirmation') Password confirmation
    input#password_confirmation.form-control(type='password', name='password_confirmation', ng-model='registrationForm.password_confirmation', required='required')
  button.btn.btn-primary.btn-lg(type='submit') Register
